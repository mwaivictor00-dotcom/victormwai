    <script>
        // Modal functionality
        const buyNowBtn = document.getElementById('buy-now-btn');
        const previewBuyBtn = document.getElementById('preview-buy-btn');
        const finalCtaBtn = document.getElementById('final-cta-btn');
        const purchaseModal = document.getElementById('purchase-modal');
        const closeModal = document.getElementById('close-modal');
        
        // Open modal when any buy button is clicked
        [buyNowBtn, previewBuyBtn, finalCtaBtn].forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                purchaseModal.style.display = 'flex';
            });
        });
        
        // Close modal when X is clicked
        closeModal.addEventListener('click', function() {
            purchaseModal.style.display = 'none';
        });
        
        // Close modal when clicking outside the modal content
        window.addEventListener('click', function(e) {
            if (e.target === purchaseModal) {
                purchaseModal.style.display = 'none';
            }
        });
    </script>
